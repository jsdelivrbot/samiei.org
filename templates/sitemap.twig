<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>http://samiei.org/</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    <url>
        <loc>http://samiei.org/index.html</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    <url>
        <loc>http://samiei.org/blog/</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>monthly</changefreq>
    </url>
    {% for topic in topics %}
    <url>
        <loc>http://samiei.org/blog/{{ topic.name|raw }}.html</loc>
        <lastmod>{{ topic.date|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    {% endfor %}
</urlset>